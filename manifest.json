{
  "manifest_version": 2,
  "name": "Cálculo de horário de saída",
  "description": "Essa extensão faz algo muito simples que o sistema de ponto não faz.",
  "version": "1.4",
  "page_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/pontoweb*"
      ],
      "js": [
        "content.js",
        "jquery-3.7.1.min.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}