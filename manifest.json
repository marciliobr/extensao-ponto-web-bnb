{
  "manifest_version": 3,
  "name": "Extensão Ponto Web BNB",
  "description": "Uma simples extensão para aprimorar a funcionalidade do sistema de ponto web do BNB.",
  "version": "2.0",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/pontoweb*"
      ],
      "js": [
        "content.js",
        "jquery-3.7.1.min.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
